<div id="content" class="content_full_width portfolio_layout">

  <% @i = 0
     @categories.each do |category| %>
      <% @i = @i+1
         if(@i%4!=0) %>
      <div class="one_fourth">
      <% else %>
      <div class="one_fourth_last">
      <% end %>
        <div class="modern_img_frame modern_four_col_large">

          <div class="modern_preload_four_col_large preload">
            <a href="<%= category_path(category.id) %>" class="attachment-fadeIn"><%= image_tag "products/" + category.image_url, :style => 'width: 190px; height: 111px;' %></a></div><!-- END preload -->
        </div><!-- END modern_frame -->


        <div class="portfolio_content">
          <h3><%= category.name %></h3>
        </div><!-- end portfolio_content -->

      </div><!-- end one_fourth -->

  <% end %>

  </div>
  <br class="clear">

</div>