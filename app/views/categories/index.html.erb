<div class="content_full_width portfolio_layout">

  <% i = 0
     @categories.each do |category| %>
      <% i = i+1 %>
      <div class="one_fourth<% if(i%4==0) %>_last<% end %>">
        <div class="modern_img_frame modern_four_col_large">

          <div class="modern_preload_four_col_large">
            <a href="<%= category_products_path(category) %>" class="attachment-fadeIn"><%= image_tag "products/" + category.image_url, :class => 'landscape_small' %></a>
          </div><!-- END preload -->
        </div><!-- END modern_frame -->


        <div class="portfolio_content">
          <h3><%= raw(category.name) %></h3>
        </div><!-- end portfolio_content -->

      </div><!-- end one_fourth -->

  <% end %>


  <br class="clear">

</div>