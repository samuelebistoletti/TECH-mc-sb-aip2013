<div id="content" class="content_full_width portfolio_layout">

  <% i = 0
     @designers.each do |designer| %>
      <% i = i+1 %>
      <div class="one_fourth<% if(i%4==0) %>_last<% end %>">
        <div class="modern_img_frame modern_four_col_large">

          <div class="modern_preload_four_col_large">
            <a href="<%= designer_path(designer) %>" class="attachment-fadeIn"><%= image_tag "designers/" + designer.image_url, :style => 'width: 190px; height: 111px;' %></a></div><!-- END preload -->
        </div><!-- END modern_frame -->


        <div class="portfolio_content">
          <h3><%= raw(designer.name) %></h3>
        </div><!-- end portfolio_content -->

      </div><!-- end one_fourth -->

  <% end %>

  <br class="clear">
  <div class="center">
    <a href="<%= designer_path(@first) %>" class="ka_button small_button small_tealgrey"><span>Conosci i nostri designers</span></a>
  </div>

</div>
