<%= form_for @partner, :html => {:class => "contact-form commentsblock"} do |f| %>
    <% if @partner.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@partner.errors.count, "error") %> prohibited this designer from being saved:</h2>

          <ul>
            <% @partner.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label "Nome" %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label "Descrizione" %>
      <%= f.text_area(:description, :size => "40x15") %>
    </div>

    <div class="field">
      <%= f.label "Link Esterno" %>
      <%= f.text_field :external_link %>
    </div>

    <div class="field">
      <%= f.label "Immagine" %>
      <%= f.file_field :image_url %>
    </div>

    <div class="actions"><br>
      <%= f.submit "Salva", :class => 'ka-form-submit' %>
    </div>
<% end %>
