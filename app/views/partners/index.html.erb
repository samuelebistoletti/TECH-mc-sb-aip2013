<div class="content_full_width portfolio_layout">

  <% i = 0
     @partners.each do |partner| %>
      <% i = i+1 %>
      <div class="one_fourth<% if(i%4==0) %>_last<% end %>">
      <div class="modern_img_frame modern_four_col_large">

        <div class="modern_preload_four_col_large">
          <a href="<%= partner_path(partner) %>" class="attachment-fadeIn"><%= image_tag "partners/" + partner.image_url, :class => 'landscape_small' %></a>
        </div><!-- END preload -->
      </div><!-- END modern_frame -->


      <div class="portfolio_content">
        <h3><%= raw(partner.name) %></h3>
      </div><!-- end portfolio_content -->

      </div><!-- end one_fourth -->

  <% end %>


  <div class="clear"></div>
  <div class="center">
    <a href="<%= partner_path(@first) %>" class="ka_button small_button small_tealgrey"><span>Conosci i nostri partners</span></a>
  </div>

  </div>