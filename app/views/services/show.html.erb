          <li class="description_tab active"><a href="#tab-description">Modalit√†</a></li>
        </ul>
        <div class="panel entry-content" id="tab-description" style="display: block;">

          <p><%= raw(@service.procedure) %></p>

        </div>

      </div>

    </div>

  </div>

<div class="clear"></div>

