<div class="content_full_width portfolio_layout">

<h2>I seguenti servizi sono disponibili per tutte le categorie di mobili.</h2>
<% i = 0
   @generalServices.each do |service| %>
    <% i = i+1
       if(i%4!=0) %>
        <div class="one_fourth">
    <% else %>
        <div class="one_fourth_last">
    <% end %>

    <div class="modern_img_frame modern_four_col_large">
      <div class="modern_preload_four_col_large preload">
        <a href="<%= service_path(service) %>" class="attachment-fadeIn"><%= image_tag "services/" + service.image_url, :style => 'width: 190px; height: 111px;' %></a>
      </div><!-- END preload -->
    </div><!-- END modern_frame -->


    <div class="portfolio_content">
      <h3><%= service.name %></h3>
    </div><!-- end portfolio_content -->

    </div><!-- end one_fourth -->
<% end %>


<br class="clear">

<h2>I seguenti servizi sono disponibili per alcune categorie di mobili.</h2>
<% i = 0
   @specificServices.each do |service| %>
    <% i = i+1
       if(i%4!=0) %>
        <div class="one_fourth">
    <% else %>
        <div class="one_fourth_last">
    <% end %>

    <div class="modern_img_frame modern_four_col_large">
      <div class="modern_preload_four_col_large">
        <a href="<%= service_path(service) %>" class="attachment-fadeIn"><%= image_tag "services/" + service.image_url, :style => 'width: 190px; height: 111px;' %></a>
      </div><!-- END preload -->
    </div><!-- END modern_frame -->


    <div class="portfolio_content">
      <h3><%= service.name %></h3>
    </div><!-- end portfolio_content -->

    </div><!-- end one_fourth -->
<% end %>

</div>
<br class="clear">

</div>
</div>