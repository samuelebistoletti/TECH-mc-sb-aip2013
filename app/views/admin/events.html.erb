<a href="<%= admin_path %>" class="ka_button small_button small_tealgrey"><span>Vai Al Menu Principale</span></a>
<a href="<%= new_event_path %>" class="ka_button small_button small_tealgrey"><span>Aggiungi Un Nuovo Evento</span></a>

<br><br>

<div class="message_karma_tealgrey colored_box">
  <p style="font-size:13px;">
    <%= notice %>
  </p>
</div>

<table>
  <tr>
    <th>Nome</th>
    <th>Descrizione</th>
    <th>Data</th>
    <th>Luogo</th>
    <th>Informazioni Agg.</th>
    <th>Immagine</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.extra_notes %></td>
        <td><%= image_tag("events/#{event.image_url}", :width => "120") %></td>
        <td><%= link_to 'Mostra', event %></td>
        <td><%= link_to 'Modifica', edit_event_path(event) %></td>
        <td><%= link_to 'Cancella', event, method: :delete, data: { confirm: 'Sei sicuro di voler cancellare questo evento?' } %></td>
      </tr>
  <% end %>
</table>
