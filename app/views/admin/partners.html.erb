<div class="center">
  <a href="<%= admin_path %>" class="ka_button small_button small_tealgrey"><span>Vai Al Menu Principale</span></a>
  <a href="<%= new_partner_path %>" class="ka_button small_button small_tealgrey"><span>Aggiungi Un Nuovo Partner</span></a></div>

<br><br>

<div class="message_karma_tealgrey colored_box">
  <p style="font-size:13px;">
    <%= notice %>
  </p>
</div>

<table>
  <tr>
    <th>Nome</th>
    <th>Descrizione</th>
    <th>Immagine</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @partners.each do |partner| %>
      <tr>
        <td><%= raw(partner.name) %></td>
        <td><%= raw(partner.description) %></td>
        <td><%= image_tag("partners/#{partner.image_url}", :class => 'rounded') %></td>
        <td><%= link_to image_tag("_global/show.png", :class => 'ico'), partner %></td>
        <td><%= link_to image_tag("_global/edit.png", :class => 'ico'), edit_partner_path(partner) %></td>
        <td><%= link_to image_tag("_global/delete.png", :class => 'ico'), partner, method: :delete, data: { confirm: 'Sei sicuro di voler cancellare questo partner?' } %></td>
      </tr>
  <% end %>
</table>
