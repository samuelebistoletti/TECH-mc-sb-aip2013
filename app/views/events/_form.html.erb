<%= form_for @event, :html => {:class => "contact-form commentsblock", :name => 'myform'} do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this designer from being saved:</h2>

          <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label "Nome" %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label "Descrizione" %>
      <%= f.text_area(:description, :size => "40x15") %>
    </div>

    <div class="field">
      <%= f.label "Data (aaaa-mm-gg)" %>
      <%= f.text_field :date %>
    </div>

    <div class="field">
      <%= f.label "Luogo" %>
      <%= f.text_field :location %>
    </div>

    <div class="field">
      <%= f.label "Informazioni Aggiuntive" %>
      <%= f.text_area(:extra_notes, :size => "40x15") %>
    </div>

    <div class="field">
      <%= f.label "Immagine" %>
      <%= f.file_field :image_url %>
    </div>

    <div class="actions"><br>
      <a href="<%= admin_events_path %>" class="ka_button small_button small_tealgrey"><span>Annulla</span></a>
      <a href="javascript: document.myform.submit()" class="ka_button small_button small_tealgrey"><span>Salva</span></a>
    </div>
<% end %>
