<div id="content" class="content_full_width portfolio_layout">

  <% i = 0
     @events.each do |event| %>
      <% i = i+1
         if(i%3!=0) %>
          <div class="one_third">
      <% else %>
          <div class="one_third_last">
      <% end %>
        <div class="modern_img_frame modern_portrait_thumb">

          <div class="modern_preload_portrait_thumb">
            <a href="<%= event_path(event) %>" class="attachment-fadeIn"><%= image_tag "events/" + event.image_url, :style => 'width: 275px; height: 335px;' %></a></div><!-- END preload -->
        </div><!-- END modern_frame -->


        <div class="portfolio_content">
          <h3><%= event.name %></h3>
        </div><!-- end portfolio_content -->

      </div><!-- end one_fourth -->

  <% end %>

  <div class="clear"></div>
  <div class="center">
    <a href="<%= event_path(@first) %>" class="ka_button small_button small_tealgrey"><span>Scopri i nostri eventi</span></a>
  </div>
</div>